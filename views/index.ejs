
<!-- include header -->
    <%- include('include/_header') %>

<div class="container">
    <br>
    <a href="/add-note" class="btn btn-success">Add New Note</a>

    <% for(var i = 0; i < users.length; i++) { %>
    
        <div class="card mt-4">
            <div class="card-body">
                <h4 class="card-title"><%= users[i].title %></h4>
                <div class="card-subtitle text-muted mb-2">
                    <%= users[i].createdOn %>
                </div>
                <div class="card-text mb-2"><%= users[i].content %></div>

                <a href="/update-note?id=<%= users[i]._id%>" class="btn btn-info">
                    <span class="text-gradient"><i class="fas fa-edit"></i></span> Update
                </a>
                <a class="btn btn-danger delete" data-id=<%= users[i]._id%> >
                    <span class="text-gradient"><i class="fas fa-trash"></i></span> <span style="color:white;"> Delete</span>
                </a>
                
            </div>
        </div>

    <% } %>
</div>


<!-- include footer -->
<%- include('include/_footer') %>
