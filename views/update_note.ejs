            <label for="content" class="">Content</label><br>
            <textarea class="form-control" name="content" placeholder="Content"><%= user.content %></textarea>
        </div>
      
        <div class="form-group">
            <button type="submit" class="btn btn-secondary update">Update</button>
        </div>

    </div>
